{
  "name": "@vnode/inventory-db",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@vnode/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!**/*.tsbuildinfo"
  ],
  "nx": {
    "sourceRoot": "dbs/inventory-db/src",
    "targets": {
      "build": {
        "executor": "@nx/js:swc",
        "outputs": [
          "{options.outputPath}"
        ],
        "options": {
          "outputPath": "dbs/inventory-db/dist",
          "main": "dbs/inventory-db/src/index.ts",
          "tsConfig": "dbs/inventory-db/tsconfig.lib.json",
          "skipTypeCheck": true,
          "stripLeadingPaths": true
        }
      }
    }
  },
  "dependencies": {
    "@prisma/client": "^7.2.0",
    "@swc/helpers": "~0.5.11",
    "@vnode/utils": "workspace:*",
    "@vnode/zod": "workspace:*",
    "dotenv": "17.2.3",
    "prisma": "7.2.0",
    "vitest": "^4.0.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@vnode/prisma-zod-generator": "workspace:*",
    "dotenv": "^17.2.3",
    "prisma": "^7.2.0"
  }
}